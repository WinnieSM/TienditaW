
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios</h2>
<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header c-green">
        <i class="fas fa-users me-1"></i>   Lista de usuarios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 mb-4">
                <button type="button" class="btn btn-info">Nuevo</button>
            </div>

            <hr />

            <table id="tablaUsuarios" class="display cell-border mt-4" style="width: 100%">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Usuario</th>
                        <th>Correo</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>



@section scripts{
    <script>

            var TablaData;

            jQuery.ajax({
                url: '@Url.Action("ListarUsuarios","Home")',
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    console.log(data);
                }

            })

            TablaData = $("#tablaUsuarios").DataTable({
                responsive: true,
                ordering: false,
                "ajax":{
                     url: '@Url.Action("ListarUsuarios","Home")',
                     type: "GET",
                     dataType: "json",
                },
                "columns": [
                    { "data": "cNombres" },
                    { "data": "cApellidos" },
                    { "data": "cUsuario" },
                    { "data": "cCorreo"},
                    {
                        "data": "lActivo", "render": function (valor) {
                            debugger;
                            if (valor) {
                                return '<span class="badge bg-success">SI</span>'
                            } else {
                                return '<span class="badge bg-danger">NO</span>'
                            }
                        }
                    },
                    {
                        "defaultContent": '<button type="button" class="btn btn-info"><i class="fas fa-pen"></i></button>' + 
                                            '<button type="button" class= "btn btn-danger ms-2"><i class="fas fa-trash"></i></button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "90px"
                    }
                ]
            });







    </script>
    
    
    }